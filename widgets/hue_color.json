{
  "type": "column",
  "children": [
    {
      "type": "row",
      "flex": 3,
      "children": [
        {
          "type": "color_picker",
          "id": "hue",
          "flex": 1,
          "enableAlpha": false,
          "value": "$hue$"
        },
        {
          "type": "image_button",
          "flex": 2,
          "id": "onoff",
          "mainIndicator": true,
          "values": "$images$",
          "value": "$onoff$"
        },
        {
          "type": "spacer",
          "flex": 1
        }
      ]
    },
    {
      "type": "slider",
      "id": "dim",
      "divisions": 100,
      "flex": 1,
      "min": 0,
      "max": 100,
      "value": "$dim$"
    }
  ]
}
